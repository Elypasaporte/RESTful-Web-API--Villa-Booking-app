


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">Book Your Stay</h5>
                </div>
                <div class="card-body">
                    <!-- Booking form -->
                    <form>
                        <div class="form-group ">
                            <label for="check-in-date">Check-in Date</label>
                            <input type="date" class="form-control mt-2" id="check-in-date" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="check-out-date">Check-out Date</label>
                            <input type="date" class="form-control mt-2" id="check-out-date" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="guests">Number of Guests</label>
                            <input type="number" class="form-control mt-2" id="guests" required>
                        </div>
                        <a  asp-controller="Booking" asp-action="Sorry" class="btn btn-primary btn-block mt-2">Book Now </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


